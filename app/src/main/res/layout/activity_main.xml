<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"

    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.helloworld.calculator.MainActivity">

  <TextView
      android:layout_width="match_parent"
      android:layout_height="100dp"
      android:id="@+id/tv1"
      android:textSize="40sp"
      android:hint="0"
      />
  <TextView
      android:layout_width="match_parent"
      android:layout_height="100dp"
      android:layout_below="@id/tv1"
      android:id="@+id/tv2"/>
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/rl1"
      android:layout_below="@+id/tv2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/btn1"
      android:text="C"
          android:textSize="30sp" />
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/btn2"
          android:text="/"
          android:textSize="30sp"/>
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/btn3"
          android:text="x"
          android:textSize="30sp"/>
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/btn4"
          android:text="Dl"
          android:textSize="30sp"/>
      </LinearLayout>
  </RelativeLayout>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/rl1"
      android:id="@+id/rl2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn5"
        android:text="7"
        android:textSize="30sp"/>
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/btn6"
          android:text="8"
          android:textSize="30sp"/>
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/btn7"
          android:text="9"
          android:textSize="30sp"/>
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/btn8"
          android:text="-"
          android:textSize="30sp"/>
    </LinearLayout>
  </RelativeLayout>
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/rl2"
      android:id="@+id/rl3">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/btn9"

          android:text="4"
          android:textSize="30sp"/>
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/btn10"
          android:text="5"
          android:textSize="30sp"/>
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/btn11"
          android:text="6"
          android:textSize="30sp"/>
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/btn12"
          android:text="+"
          android:textSize="30sp"/>
    </LinearLayout>
  </RelativeLayout>
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/rl3"
      android:id="@+id/rl4">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/btn13"
          android:text="1"
          android:textSize="30sp"/>
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/btn14"
          android:text="2"
          android:textSize="30sp"/>
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/btn15"
          android:text="3"
          android:textSize="30sp"/>
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/btn16"
          android:text="()"
          android:textSize="30sp"/>
    </LinearLayout>
  </RelativeLayout>
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/rl4">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/btn17"
          android:text="0"
          android:textSize="30sp"/>
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/btn18"
          android:text="."
          android:textSize="30sp"/>
      <Button
          android:layout_width="200dp"
          android:layout_height="wrap_content"
          android:id="@+id/btn20"
          android:text="=       "
          android:textSize="30sp"
          />
    </LinearLayout>
  </RelativeLayout>
</RelativeLayout>
